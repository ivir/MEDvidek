<html>
  <head>
    <title>Builder - tvorba receptu</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="">
    <%= stylesheet_link_tag 'bootstrap-theme', 'bootstrap','main' %>
    <%= javascript_include_tag 'jquery', 'bootstrap.min', 'application', 'json-to-table' %>
  </head>
  <body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">MEDvídek</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "Domů", Portal::App.url(:main, :index) %></li>
          <li><%= link_to "Tvorba receptu", Portal::Build.url(:build, :index) %></li>
          <li><%= link_to 'Zpracovat recept',Portal::Build.url(:build, :process) %></li>
          <li><%= link_to "Ke stažení", Portal::Storage.url(:list, :index) %></li>
        </ul>
      </div><!--/ .nav-collapse -->
    </div>
  </nav>
  <div class="container">
    <div class="starter-template">
      <div class="form-group">
        <div class="files">
          <a href="#" onClick="addFile(event,-1);return false;">Přidat možnost nahrání dalšího souboru</a>
        </div>
      </div>
  <br />
  <br />
  <div class="recipe">
    <div>Recept: <input type="file" name="recipe" /></div>
    <br />
    <button onClick="processRecipe(event)">Zpracovat</button>
    <div class="info">
      <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="00" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
          <span class="sr-only">00% Complete</span>
        </div>
      </div>
    </div>
  </div>
  <div class="data">
    <ul>
      <% for file in @files %>
        <li><%= link_to file, "/storage/download/#{file}" %></li>
      <% end %>
    </ul>
  </div>
  </div>
  </div>
  </body>
</html>
<html>
<head>
  <title>MEDvídek - portál pro správu financí</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta content="">
  <%= stylesheet_link_tag 'bootstrap-theme', 'bootstrap.min','main' %>
  <%= javascript_include_tag 'jquery', 'bootstrap.min', 'app.js'%>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">MEDvídek</a>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "Recept", Portal::Build.url(:build, :index) %></li>
        <li class="dropdown active">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Lidé<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Tarify", Portal::App.url(:accounting, :index) %></li>
            <li><%= link_to "SIM", Portal::App.url(:sim, :index) %></li>
            <li><%= link_to "Zahraniční cesty", Portal::App.url(:accounting, :index) %></li>
            <li><%= link_to "Lidé", Portal::App.url(:accounting, :index) %></li>
            <li><%= link_to "Nadřízení", Portal::App.url(:accounting, :index) %></li>
            <li><%= link_to "Synchronizace", Portal::App.url(:accounting, :index) %></li>
          </ul>
        </li>
        <li><%= link_to "SIM", Portal::App.url(:sim, :index) %></li>
        <li><%= link_to "Soubory", Portal::Storage.url(:list, :index) %></li>
        <li><%= link_to "Report", Portal::Report.url(:list, :index) %></li>
        <li>Evidence</li>
        <% if Account.current.nil? %>
            <li class="navbar-right"><span class="navbar-brand"><%= link_to "Přihlásit", Portal::App.url(:main,:login) %></span></li>
        <% else %>
            <li class="navbar-right"><span class="navbar-brand"><%= Account.current.name %> <%= Account.current.surname %> - <%= link_to "Odhlásit", Portal::App.url(:main, :logout) %></span></li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>

<div class="starter-template">
  <h1>Tarify</h1>
  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Tarify</div>
    <div class="panel-body">
      <p>Přehled dostupných tarifů</p>
    </div>
    <form class="navbar-form navbar-left" method="post" action="">
      <%= csrf_token_field %>
      <table class=".table tariff">
        <tr><th>NUM</th><th>Název tarifu</th><th>Částka</th></tr>
        <tr><td><button class="btn btn-default" onClick="tariff_add(event)">Přidat</button></td><td><input type="text" name="name" class="form-control" placeholder="Název tarifu" aria-describedby="basic-addon1"></td><td><input type="number" name="price" class="form-control" placeholder="Částka" aria-describedby="basic-addon1"></td></tr>
        <% @tariffs.each do |rate| %>
            <tr><td><button class="btn btn-default" type="button" onClick="tariff_del(event);return false;">Smazat</button></td><td><%= rate %></td><td><%= rate %></td></tr>
        <% end %>
      </table>
    </form>

  </div>
</div>
</body>
</html>
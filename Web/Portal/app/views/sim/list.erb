<html>
<head>
  <title>MEDvídek - portál pro správu financí</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta content="">
  <%= stylesheet_link_tag 'bootstrap-theme', 'bootstrap.min','main' %>
  <%= javascript_include_tag 'jquery', 'bootstrap.min', 'app.js'%>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">MEDvídek</a>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "Recept", Portal::Build.url(:build, :index) %></li>
        <li><%= link_to "Lidé", Portal::App.url(:accounting, :index) %></li>
        <li class="active"><%= link_to "SIM", Portal::App.url(:sim, :index) %></li>
        <li><%= link_to "Soubory", Portal::Storage.url(:list, :index) %></li>
        <li><%= link_to "Report", Portal::Report.url(:list, :index) %></li>
        <li>Evidence</li>
        <% if Account.current.nil? %>
            <li class="navbar-right"><span class="navbar-brand"><%= link_to "Přihlásit", Portal::App.url(:main,:login) %></span></li>
        <% else %>
            <li class="navbar-right"><span class="navbar-brand"><%= Account.current.name %> <%= Account.current.surname %> - <%= link_to "Odhlásit", Portal::App.url(:main, :logout) %></span></li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>

<div class="starter-template">
  <h1>Přehled SIM karet</h1>
  <form class="navbar-form navbar-left" method="post" action="<%= Portal::App.url(:sim,:create) %>">
    <%= csrf_token_field %>
  <table class=".table">
    <tr><th>NUM</th><th>Číslo karty</th><th>Telefonní číslo</th></tr>
    <tr><td><button class="btn btn-default" type="submit" onClick="add(event)">Přidat</button></td><td><input type="text" name="sim" class="form-control" placeholder="Číslo SIM" aria-describedby="basic-addon1"></td><td><input type="text" name="phone" class="form-control" placeholder="Mobilní číslo" aria-describedby="basic-addon1"></td></tr>
    <% @phones.each do |simcard| %>
    <tr><td>NUM</td><td><%= simcard.serial %></td><td><%= simcard.phone %></td></tr>
    <% end %>
  </table>
  </form>
</div>
</body>
</html>
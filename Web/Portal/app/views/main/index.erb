<html>
<head>
  <title>MEDvídek - portál pro správu financí</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta content="">
  <%= stylesheet_link_tag 'bootstrap-theme', 'bootstrap.min','main' %>
  <%= javascript_include_tag 'jquery', 'bootstrap.min', 'app.js'%>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">MEDvídek</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to "Recept", Portal::Build.url(:build, :index) %></li>
          <li><%= link_to "Soubory", Portal::Storage.url(:list, :index) %></li>
          <li><%= link_to "Report", Portal::Report.url(:list, :index) %></li>
          <li>Evidence</li>
          <% if Account.current.nil? %>
              <li class="navbar-right"><span class="navbar-brand"><%= link_to "Přihlásit", Portal::App.url(:main,:login) %></span></li>
          <% else %>
              <li class="navbar-right"><span class="navbar-brand"><%= Account.current.name %> <%= Account.current.surname %> - <%= link_to "Odhlásit", Portal::App.url(:main, :logout) %></span></li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

    <div class="starter-template">
      <h1>Zpracování vyúčtování</h1>
      <form class="navbar-form navbar-left" method="post" action="<%= Portal::Build.url(:build,:process) %>" enctype='multipart/form-data'>
        <%= csrf_token_field %>
        <div class="form-group">
          <div class="files">
            <a href="#" onClick="addFile(event);return false;">Přidat možnost nahrání dalšího souboru</a>
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">Soubor pro zpracování (file1)</span>
              <input type="file" name="data[]" class="form-control" placeholder="Nahravana data" aria-describedby="basic-addon1">
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label">Dostupné recepty:</label>
          <select name="recipe" class="form-control">
            <% @soubory.each do |soubor| %>
                <% next if soubor[1].nil? %>
              <option value="<%= soubor[0] %>/<%= soubor[1] %>"><%= soubor[1] %></option>
            <% end %>
          </select>
        </div>
        <div class="form-group">
          <div class="btn">
            <button class="btn btn-default" type="submit" onClick="process(event)">Zpracovat</button>
          </div>
        </div>
      </form>
    </div>
</body>
</html>
<html>
  <head>
    <title>Builder - tvorba receptu</title>
    <meta content="">
    <%= stylesheet_link_tag "bootstrap.min", 'main' %>
    <%= javascript_include_tag 'jquery', 'application', 'json-to-table.js', 'bootstrap.min' %>
  </head>
  <body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">MEDvídek</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to "Zpět", Portal::App.url(:main, :index) %></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>
    <%= link_to "Ke stažení", url_for(:list, :download) %>
  <div class="data">
    <ul>
      <% for file in @files %>
          <% if File.file?(@userdir + "/" + file) %>
            <li><%= link_to file, url_for(:list, :download, :file => file) %></li>
          <% else %>
              <li><%= link_to file, url_for(:list, :list, :dir => file) %></li>
          <% end %>
      <% end %>
    </ul>
  </div>
  </body>
</html>
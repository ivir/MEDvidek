<html>
  <head>
    <title>Builder - tvorba receptu</title>
    <meta content="">
    <%= stylesheet_link_tag "bootstrap.min", 'main' %>
    <%= javascript_include_tag 'jquery', 'bootstrap.min' %>
  </head>
  <body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">MEDvídek</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to "Zpět", Portal::App.url(:main, :index) %></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>
  <div class="container">
    <div class="data">
      <ul class="list-group">
        <% for file in @files %>
            <% if File.file?(File.join(@userdir,file.join(File::SEPARATOR))) %>
              <li class="list-group-item"><span class="glyphicon glyphicon-save-file" aria-hidden="true"></span> <%= link_to file.last, url_for(:list, :download, :file => file.join("/")) %></li>
            <% else %>
                <li class="list-group-item"><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> <%= link_to file.last, url_for(:list, :list, :path => file.join("/")) %></li>
            <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  </body>
</html>